<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>3D Viewer Gedung F Kampus</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            background: linear-gradient(135deg, #1a237e 0%, #283593 100%);
            color: white;
            height: 100vh;
            overflow: hidden;
        }
        
        .header {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            padding: 15px 20px;
            background: rgba(0, 0, 0, 0.7);
            z-index: 100;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .header h1 {
            font-size: 1.5rem;
            color: #4FC3F7;
        }
        
        #viewer-container {
            width: 100%;
            height: 100vh;
            position: relative;
        }
        
        #model-canvas {
            display: block;
            width: 100%;
            height: 100%;
        }
        
        /* Floor Selector */
        .floor-selector {
            position: absolute;
            bottom: 20px;
            right: 20px;
            z-index: 100;
            background: rgba(0, 0, 0, 0.85);
            border-radius: 15px;
            padding: 15px;
            min-width: 160px;
        }
        
        .floor-title {
            font-size: 1.1rem;
            margin-bottom: 10px;
            color: #4FC3F7;
            text-align: center;
            font-weight: 600;
        }
        
        .floor-buttons {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .floor-btn {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: white;
            padding: 12px 15px;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1rem;
            text-align: left;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .floor-btn.active {
            background: rgba(79, 195, 247, 0.7);
            font-weight: 600;
        }
        
        /* Tombol AR */
        .ar-btn {
            position: absolute;
            top: 80px;
            right: 20px;
            z-index: 100;
            background: linear-gradient(90deg, #FF4081, #FF9800);
            border: none;
            color: white;
            padding: 10px 15px;
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
        }
        
        /* Loading */
        .loading {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, #1a237e 0%, #283593 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 200;
        }
        
        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid rgba(255, 255, 255, 0.1);
            border-top: 5px solid #4FC3F7;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        /* Info */
        .info {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background: rgba(0, 0, 0, 0.8);
            padding: 12px 15px;
            border-radius: 10px;
            font-size: 0.9rem;
            max-width: 200px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>üéì Gedung F Kampus - 3D Viewer</h1>
        <div id="status">Gedung Utuh</div>
    </div>
    
    <!-- Tombol AR -->
    <button class="ar-btn" onclick="openAR()">üì± Mode AR</button>
    
    <!-- 3D Viewer Container -->
    <div id="viewer-container">
        <canvas id="model-canvas"></canvas>
    </div>
    
    <!-- Floor Selector -->
    <div class="floor-selector">
        <div class="floor-title">üè¢ Pilih Lantai</div>
        <div class="floor-buttons">
            <button class="floor-btn active" onclick="showBuilding()">üèõÔ∏è Gedung Utuh</button>
            <button class="floor-btn" onclick="showFloor(1)">1Ô∏è‚É£ Lantai 1</button>
            <button class="floor-btn" onclick="showFloor(2)">2Ô∏è‚É£ Lantai 2</button>
            <button class="floor-btn" onclick="showFloor(3)">3Ô∏è‚É£ Lantai 3</button>
        </div>
    </div>
    
    <!-- Info -->
    <div class="info">
        üñ±Ô∏è Drag untuk melihat dari berbagai sudut<br>
        üîç Scroll untuk zoom in/out
    </div>
    
    <!-- Loading Screen -->
    <div class="loading" id="loading">
        <div class="spinner"></div>
        <h2>Memuat 3D Viewer...</h2>
        <p>Model akan muncul dalam beberapa detik</p>
    </div>

    <!-- Simple Three.js Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
        // Sembunyikan loading setelah 2 detik
        setTimeout(() => {
            document.getElementById('loading').style.display = 'none';
            init3DViewer();
        }, 2000);
        
        let scene, camera, renderer, cube;
        
        function init3DViewer() {
            // Buat scene
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x1a237e);
            
            // Tambahkan cahaya
            const light = new THREE.DirectionalLight(0xffffff, 1);
            light.position.set(5, 10, 5);
            scene.add(light);
            scene.add(new THREE.AmbientLight(0x404040));
            
            // Buat camera
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.z = 5;
            
            // Buat renderer
            const canvas = document.getElementById('model-canvas');
            renderer = new THREE.WebGLRenderer({ canvas, antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            
            // Buat gedung (cube sederhana dulu)
            createBuilding();
            
            // Handle resize
            window.addEventListener('resize', () => {
                camera.aspect = window.innerWidth / window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });
            
            // Mouse controls sederhana
            let mouseDown = false;
            let lastMouseX = 0;
            let lastMouseY = 0;
            
            canvas.addEventListener('mousedown', (e) => {
                mouseDown = true;
                lastMouseX = e.clientX;
                lastMouseY = e.clientY;
            });
            
            canvas.addEventListener('mouseup', () => mouseDown = false);
            canvas.addEventListener('mousemove', (e) => {
                if (!mouseDown) return;
                const deltaX = e.clientX - lastMouseX;
                const deltaY = e.clientY - lastMouseY;
                
                if (cube) {
                    cube.rotation.y += deltaX * 0.01;
                    cube.rotation.x += deltaY * 0.01;
                }
                
                lastMouseX = e.clientX;
                lastMouseY = e.clientY;
            });
            
            // Zoom dengan scroll
            canvas.addEventListener('wheel', (e) => {
                camera.position.z += e.deltaY * 0.01;
                if (camera.position.z < 3) camera.position.z = 3;
                if (camera.position.z > 20) camera.position.z = 20;
            });
            
            // Start animation
            animate();
        }
        
        function createBuilding() {
            // Hapus cube lama jika ada
            if (cube) scene.remove(cube);
            
            // Buat cube sebagai gedung
            const geometry = new THREE.BoxGeometry(2, 3, 2);
            const material = new THREE.MeshPhongMaterial({ 
                color: 0x4FC3F7,
                transparent: true,
                opacity: 0.8
            });
            
            cube = new THREE.Mesh(geometry, material);
            scene.add(cube);
            
            // Tambahkan lantai-lantai (garis)
            for (let i = 0; i < 3; i++) {
                const floorGeometry = new THREE.BoxGeometry(2.1, 0.1, 2.1);
                const floorMaterial = new THREE.MeshBasicMaterial({ color: 0xFFFFFF });
                const floor = new THREE.Mesh(floorGeometry, floorMaterial);
                floor.position.y = -1.4 + i * 1;
                scene.add(floor);
            }
        }
        
        function showBuilding() {
            // Update tombol
            document.querySelectorAll('.floor-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector('.floor-btn:nth-child(1)').classList.add('active');
            
            // Update gedung
            if (cube) {
                cube.scale.set(1, 1, 1);
                cube.position.y = 0;
                cube.material.color.setHex(0x4FC3F7); // Biru untuk gedung utuh
            }
            
            document.getElementById('status').textContent = 'Gedung Utuh';
        }
        
        function showFloor(floorNum) {
            // Update tombol
            document.querySelectorAll('.floor-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.floor-btn')[floorNum].classList.add('active');
            
            // Update cube untuk lantai
            if (cube) {
                // Ubah warna berdasarkan lantai
                const colors = [0x4FC3F7, 0xFF9800, 0x4CAF50, 0x9C27B0];
                cube.material.color.setHex(colors[floorNum]);
                
                // Tampilkan hanya satu lantai (scale vertikal lebih kecil)
                cube.scale.set(1, 0.3, 1);
                cube.position.y = -1 + (floorNum - 1) * 0.5;
            }
            
            document.getElementById('status').textContent = `Lantai ${floorNum}`;
        }
        
        function openAR() {
            alert('Mode AR akan aktif di perangkat mobile. Akses website ini di HP/Tablet untuk pengalaman AR.');
            // Untuk AR sebenarnya butuh library tambahan, tapi ini demo sederhana
        }
        
        function animate() {
            requestAnimationFrame(animate);
            
            // Rotasi pelan
            if (cube) {
                cube.rotation.y += 0.005;
            }
            
            renderer.render(scene, camera);
        }
    </script>
</body>
</html>